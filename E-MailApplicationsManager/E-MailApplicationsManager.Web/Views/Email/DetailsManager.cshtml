@model EmailViewModel

@{
    ViewData["Title"] = "DetailsManager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<img src="~/images/tbilogo.jpg" alt="Sample Photo" />
<h1>DetailsManager</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GmailId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GmailId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateReceived)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateReceived)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    <select id="change-email">
        <option value="1">NotReviewed</option>
        <option value="2">InvalidApplication</option>
    </select>
    <button class="btn btn-primary" value="@Model.GmailId" type="submit" id="change-email-status">Change</button><br />
    <br />
    <div class="form-group row">
        <div class="col-xs-2">
            <button id="email-result" value="@Model.GmailId" class="btn btn-primary">New</button>
            <button id="email-invalid-manager" value="@Model.GmailId" class="btn btn-primary">InvalidApplication</button>
        </div>
    </div>
</div>
<div>
    <br />
    <string>
        <a class="goback" href="javascript:history.go(-1)" title="Go to previous page">Go back</a>
    </string>
</div>


