@model EmailViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>
<img src="~/images/tbilogo.jpg" alt="Sample Photo" />
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GmailId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GmailId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateReceived)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateReceived)
        </dd>
    </dl>
    <div class="form-group row">
        <div class="col-xs-2">
            <button id="email-result" value="@Model.GmailId" class="btn btn-primary">New</button>
            <button id="email-invalid" value="@Model.GmailId" class="btn btn-primary">InvalidApplication</button>
        </div>
    </div>
</div>
<div>
    <br />
    <string>
        <a class="goback" href="javascript:history.go(-1)" title="Go to previous page">Go back</a>
    </string>
</div>
