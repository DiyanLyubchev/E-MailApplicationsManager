@model EmailBodyViewModel
@{
    ViewData["Title"] = "FillEmailForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>FillEmailForm</h1>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <form id=""></form>
    <div class="row">
        <div class="col-6">
            <ul style="font-weight: bold" class="col-sm-2">Text:</ul>
            <ul class="col-sm-10">@Model.Body</ul>
        </div>
    </div>
    <div class="col-6">
        <div class="col-6" id="fill-definition">
            <div class="form-group row">
                <div class="col-xs-2">
                    <h5>FullName</h5>
                    <input type="text" name="name" id="fullname" class="form-control" />
                    <br />
                    <h5>EGN</h5>
                    <input type="text" name="name" id="egn" class="form-control" />
                    <br />
                    <h5>Phone number</h5>
                    <input type="text" name="name" id="phone-number" class="form-control" />
                    <br />
                    <button class="btn btn-primary" type="submit" id="send-button">Create!</button><br />
                    <hr />
                </div>
            </div>
        </div>

    </div>
</body>
</html>