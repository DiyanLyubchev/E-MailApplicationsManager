@model E_MailApplicationsManager.Web.Models.RegisterAccountViewModel
@{
    ViewData["Title"] = "Register";
}
<link href="~/css/custombutton.css" rel="stylesheet" />
<link href="~/css/register.css" rel="stylesheet" />
<body  class="background">
    <form id="account" method="post">
        <div class="register-wrap">
            <div class="register-html">
                <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Register Account</label>
                <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"></label>
                <div class="register-form">
                    <div class="sign-in-htm">
                        <div class="group">
                            <label asp-for="UserName"></label>
                            <input asp-for="UserName" class="input" required minlenngh="3" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="input" required minlenngh="5" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="input" required minlenngh="5" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="group">
                            <label asp-for="ConfirmPassword"></label>
                            <input asp-for="ConfirmPassword" class="input" required />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="select">
                                <select id="selec1" asp-for="Role">
                                    <option value="Manager">Manager</option>
                                    <option value="Operator">Operator</option>
                                </select>
                            </div>
                            &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                            <button class="btn-primary" style="height:12mm" id="custom-button" type="submit">Register</button>
                            <div class="hr"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>