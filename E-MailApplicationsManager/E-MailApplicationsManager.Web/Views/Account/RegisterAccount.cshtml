@model E_MailApplicationsManager.Web.Models.RegisterAccountViewModel
@{
    ViewData["Title"] = "Register";
}

<link href="~/css/dropdown.css" rel="stylesheet" />

<h1>@ViewData["Title"]</h1>


<form asp-controller="Account" asp-action="RegisterAccount" method="post">
    <hr />
    <div class="col-md-4">

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" minlenngh="3" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" minlenngh="5" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" minlenngh="5" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="row-6">
        <div class="col">
            <div class="form-group row">
                <div class="select">
                    <select id="search1" name="slct" asp-for="Role">
                        <option selected disabled>Choose an option</option>
                        <option value="Manager">Manager</option>
                        <option value="Operator">Operator</option>
                    </select>
                </div>
                &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                <div class="col-6">
                    <button type="submit" style="background-color:#34495e" class="btn btn-primary">Register</button>
                </div>
            </div>
        </div>
    </div>
</form>
   